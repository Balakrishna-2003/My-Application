<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#140B0B"
    android:backgroundTintMode="multiply"
    tools:context=".fill_detail">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_marginTop="256dp"
        android:text="Bus Name"
        android:textAlignment="center"
        android:textColor="#FCF9F9"
        android:textColorHighlight="#F5F1F1"
        android:textColorHint="#5F4141"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="34dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="109dp"
        android:layout_height="44dp"
        android:layout_marginTop="376dp"
        android:text="From"
        android:textAlignment="center"
        android:textColor="#FCFAFA"
        android:textColorHighlight="#FBF7F7"
        android:textColorHint="#442E2E"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="34dp" />

    <EditText
        android:id="@+id/destID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="376dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#FCF9F9"
        android:textColorHighlight="#5C4848"
        android:textColorHint="#493535"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="256dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#FCFAFA"
        android:textColorHighlight="#433333"
        android:textColorHint="#362727"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/timeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#FBF9F9"
        android:textColorHighlight="#A29393"
        android:textColorHint="#291919"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="109dp"
        android:layout_height="44dp"
        android:layout_marginTop="128dp"
        android:text="Time"
        android:textAlignment="center"
        android:textColor="#FEFBFB"
        android:textColorHighlight="#FEFCFC"
        android:textColorHint="#5C4343"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="34dp" />

    <TextView
        android:layout_width="222dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:text="Enter Details"
        android:textAlignment="center"
        android:textColor="#F8F0F0"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="121dp"
        android:layout_height="40dp"
        android:layout_marginTop="144dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/destID" />
</androidx.constraintlayout.widget.ConstraintLayout>